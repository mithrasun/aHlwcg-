{
"height": 15,


"modules-left": [
	"custom/logo",
	"custom/spotify",
	"custom/discord",
	"hyprland/window"
    ],
"modules-center": [
	"hyprland/workspaces"
    ],
"modules-right":[
	"cpu",
	"battery",
	"pulseaudio",
	"clock",
	"custom/logout"
    ],

//
// .-.  .-. .---. .----. .-. .-..-.   .----. .----. 
// }  \/  {/ {-. \} {-. \| } { |} |   } |__}{ {__-` 
// | {  } |\ '-} /} '-} /\ `-' /} '--.} '__}.-._} } 
// `-'  `-' `---' `----'  `---' `----'`----'`----'  
